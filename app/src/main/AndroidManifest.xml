<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uwi.btmap">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BTMAP"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.activities.PassengerNavActivity"></activity>
        <activity android:name=".views.activities.PreviewCommuteActivity" />
        <activity android:name=".views.activities.SelectPairActivity" />
        <activity android:name=".views.activities.TestActivity" />
        <activity
            android:name=".views.activities.NavActivity"
            android:theme="@style/Theme.BTMAP.NoActionBar" />
        <activity android:name=".views.activities.MapActivity" />
        <activity android:name=".views.activities.UpdateProfileActivity" />
        <activity android:name=".views.activities.ProfileActivity" />
        <activity android:name=".views.activities.RegisterCommuteActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.BTMAP.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.VerifyActivity"
            android:theme="@style/Theme.BTMAP.NoActionBar" />
        <activity
            android:name=".views.activities.PhoneAuthActivity"
            android:theme="@style/Theme.BTMAP.NoActionBar" />
        <activity
            android:name=".views.activities.CommuteListActivity"
            android:theme="@style/Theme.BTMAP.NoActionBar" />
    </application>

</manifest>