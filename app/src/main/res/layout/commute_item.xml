<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/teal_200"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/start_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/info_background_view"
        app:layout_constraintTop_toBottomOf="@+id/route_preview_map_view">

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="170dp"
            app:cardBackgroundColor="#46A6C6"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" Commute ID: "
                        android:textColor="@color/Snow"
                        android:textSize="18dp"
                        app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

                    <TextView
                        android:id="@+id/commuteID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxx "
                        android:textColor="@color/AntiqueWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" Commuter: "
                        android:textColor="@color/Snow"
                        android:textSize="18dp"
                        app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

                    <TextView
                        android:id="@+id/commute_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxx "
                        android:textColor="@color/AntiqueWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text=" Origin Address: "
                        android:textColor="@color/Snow"
                        android:textSize="18dp"
                        app:drawableStartCompat="@drawable/ic_baseline_departure_board_24" />

                    <TextView
                        android:id="@+id/commute_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="xxxxx"
                        android:textColor="@color/AntiqueWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text=" Destination Address: "
                        android:textColor="@color/Snow"
                        android:textSize="18dp"
                        app:drawableStartCompat="@drawable/ic_baseline_pin_drop_24" />

                    <TextView
                        android:id="@+id/commute_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="xxxxx"
                        android:textColor="@color/AntiqueWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="5dp"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:text=" Estimated Time of Arrival: "-->
<!--                        android:textColor="@color/Snow"-->
<!--                        android:textSize="18dp"-->
<!--                        app:drawableStartCompat="@drawable/ic_baseline_directions_walk_24" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/commute_eta"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="xxxx"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:textColor="@color/AntiqueWhite"-->
<!--                        android:textSize="20dp"-->
<!--                        android:textStyle="bold" />-->
<!--                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text=" Scheduled Commute Time: "
                        android:textColor="@color/Snow"
                        android:textSize="18dp"
                        app:drawableStartCompat="@drawable/ic_baseline_timer_24" />

                    <TextView
                        android:id="@+id/commute_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="xxxxx "
                        android:textColor="@color/AntiqueWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>